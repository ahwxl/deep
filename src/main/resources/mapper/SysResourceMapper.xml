    values (#{resourceId,jdbcType=VARCHAR}, #{resourceName,jdbcType=VARCHAR}, #{parentResourceId,jdbcType=VARCHAR}, 
      #{url,jdbcType=VARCHAR}, #{remark,jdbcType=VARCHAR}, #{resourceType,jdbcType=VARCHAR}, 
